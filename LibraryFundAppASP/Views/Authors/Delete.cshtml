@model LibraryFundAppASP.Models.Author
@{
    ViewData["Title"] = "Удалить автора";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Удалить автора</h1>
    <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Вы уверены, что хотите удалить этого автора?</h3>
        <div class="mb-4">
            <p class="text-gray-700"><strong>Имя:</strong> @Html.DisplayFor(model => model.Name)</p>
            <p class="text-gray-700"><strong>Фамилия:</strong> @Html.DisplayFor(model => model.Surname)</p>
            <p class="text-gray-700"><strong>Страна:</strong> @Html.DisplayFor(model => model.Country)</p>
        </div>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="IdAuthor" />
            <div class="flex justify-end space-x-4">
                <a asp-action="Index" class="px-4 py-2 bg-gray-300 text-gray-800 rounded-lg hover:bg-gray-400 transition-colors">Отмена</a>
                <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">Удалить</button>
            </div>
        </form>
    </div>
</div>
