@model LibraryFundAppASP.Models.Author
@{
    ViewData["Title"] = "Детали автора";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Детали автора</h1>
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="space-y-4">
            <div>
                <h2 class="text-xl font-bold text-gray-800">@Html.DisplayFor(model => model.Surname) @Html.DisplayFor(model => model.Name)</h2>
            </div>
            <div>
                <p class="text-sm text-gray-600">
                    <span class="font-semibold">Страна:</span> @Html.DisplayFor(model => model.Country)
                </p>
            </div>
            <div class="flex space-x-4 mt-4">
                <a asp-action="Edit" asp-route-id="@Model.IdAuthor" class="text-blue-600 hover:text-blue-800 text-sm font-medium">Изменить</a>
                <a asp-action="Index" class="text-gray-600 hover:text-gray-800 text-sm font-medium">Назад к списку</a>
            </div>
        </div>
    </div>
</div>
