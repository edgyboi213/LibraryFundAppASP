@model LibraryFundAppASP.Models.Author
@{
    ViewData["Title"] = "Редактировать автора";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Редактировать автора</h1>
    <form asp-action="Edit" method="post" class="space-y-4">
        <input type="hidden" asp-for="IdAuthor" />
        <div>
            <label asp-for="Surname" class="block text-sm font-medium text-gray-700">Фамилия</label>
            <input asp-for="Surname" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700">Имя</label>
            <input asp-for="Name" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <label asp-for="Country" class="block text-sm font-medium text-gray-700">Страна</label>
            <input asp-for="Country" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div class="flex justify-end">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">Сохранить</button>
        </div>
    </form>
</div>
