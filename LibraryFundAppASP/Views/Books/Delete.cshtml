@model LibraryFundAppASP.Models.Book

@{
    ViewData["Title"] = "Удалить книгу";
}

<!-- Подключение Tailwind CSS -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Удалить книгу</h1>

    <div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
        <h3 class="text-lg font-semibold text-red-600 mb-4">Вы уверены, что хотите удалить эту книгу?</h3>
        <div class="space-y-4">
            <div>
                <p class="text-sm text-gray-600">
                    <span class="font-semibold">Название:</span> @Html.DisplayFor(model => model.Title)
                </p>
            </div>
            <div>
                <p class="text-sm text-gray-600">
                    <span class="font-semibold">Жанр:</span> @Html.DisplayFor(model => model.Genre)
                </p>
            </div>
            <div>
                <p class="text-sm text-gray-600">
                    <span class="font-semibold">Количество страниц:</span> @Html.DisplayFor(model => model.PageCount)
                </p>
            </div>
            <div>
                <p class="text-sm text-gray-600">
                    <span class="font-semibold">Год выпуска:</span> @Html.DisplayFor(model => model.ReleaseYear)
                </p>
            </div>
            <div>
                <p class="text-sm text-gray-600">
                    <span class="font-semibold">Автор:</span>
                    @Html.DisplayFor(model => model.IdAuthorNavigation.Name)
                    @Html.DisplayFor(model => model.IdAuthorNavigation.Surname)
                    (@Html.DisplayFor(model => model.IdAuthorNavigation.Country))
                </p>
            </div>
            <form asp-action="Delete" method="post" class="flex space-x-4 mt-4">
                <input type="hidden" asp-for="IdBook" />
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors">
                    Удалить
                </button>
                <a asp-action="Index" class="bg-gray-300 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-400 transition-colors">
                    Назад
                </a>
            </form>
        </div>
    </div>
</div>